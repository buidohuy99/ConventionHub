<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/12.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="conventionhub.Scenes.ThongKeHoiNghiSceneController">
   <children>
       <BorderPane fx:id="Conventions_BorderPane">
           <top>
              <BorderPane prefHeight="70.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                 <center>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="0.0" BorderPane.alignment="CENTER">
                       <BorderPane.margin>
                          <Insets />
                       </BorderPane.margin>
                       <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                       <children>
                          <TextField fx:id="SearchBar" promptText="Please input keyword">
                             <HBox.margin>
                               <Insets right="10.0" />
                             </HBox.margin>
                          </TextField>
                          <ComboBox fx:id="SearchKeywordType_ComboBox" prefWidth="150.0" promptText="Keyword type">
                             <HBox.margin>
                                <Insets right="10.0" />
                             </HBox.margin>
                          </ComboBox>
                          <Button fx:id="SearchButton" mnemonicParsing="false" text="Search" onMouseClicked="#SearchButton_Clicked"/>
                       </children>
                    </HBox>
                 </center>
              </BorderPane>
           </top>
           <center>
               <ScrollPane>
                  <content>
                    <AnchorPane id="AnchorPane" prefWidth="1200.0">
                        <children>
                           <TableView fx:id="ConventionTable" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                              <columns>
                                 <TableColumn fx:id="clmMaHoiNghi" editable="false" prefWidth="75.0" resizable="false" text="Mã hội nghị" />
                                 <TableColumn fx:id="clmTenHoiNghi" editable="false" prefWidth="168.0" resizable="false" text="Tên hội nghị" />
                                 <TableColumn fx:id="clmConfirmed" editable="false" prefWidth="100.0" resizable="false" text="Đã duyệt?" />
                                 <TableColumn fx:id="clmDescription" editable="false" prefWidth="260.0" resizable="false" text="Mô tả ngắn gọn" />
                                 <TableColumn fx:id="clmStartTime" editable="false" prefWidth="150.0" resizable="false" text="Thời điểm bắt đầu" />
                                 <TableColumn fx:id="clmEndTime" editable="false" prefWidth="175.0" resizable="false" text="Thời điểm kết thúc" />
                                 <TableColumn fx:id="clmActions" editable="false" prefWidth="272.0" resizable="false" text="Hành động" />   
                              </columns>
                           </TableView>
                        </children>
                    </AnchorPane>
                  </content>
               </ScrollPane>
           </center>
           <bottom>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="0.0" BorderPane.alignment="CENTER">
                   <children>
                       <Button fx:id="RefreshButton" mnemonicParsing="false" onMouseClicked="#RefreshButton_Clicked" text="Refresh thông tin" />
                   </children>
               </HBox>
           </bottom>
       </BorderPane>
       <VBox fx:id="loadingOverlay" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
           <children>
              <ProgressIndicator />
           </children>
       </VBox>
   </children>
</StackPane>
